<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="data.com.lamegaboxv2.boxes.MovieFragment"
    android:background="@color/indigoMaterial">

    <TextView
        android:id="@+id/titleMovie"
        android:text="@string/movie"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <ImageButton
        android:id="@+id/movieOne"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleMovie"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/movieTwo"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleMovie"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/movieThree"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/movieTwo"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/movieFour"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/movieTwo"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/movieFive"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieThree"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
