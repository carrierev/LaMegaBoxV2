<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="data.com.lamegaboxv2.boxes.AskabFragment"
    android:background="@color/pinkA400Material">

    <TextView
        android:id="@+id/titleAskab"
        android:text="@string/askab"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <ImageButton
        android:id="@+id/askabOne"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleAskab"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/askabTwo"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleAskab"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/askabThree"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/askabTwo"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/askabFour"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/askabTwo"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/askabFive"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askabThree"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/askabSix"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/askabFour"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/askabSeven"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/askabSix"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/askabEight"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/askabSix"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />


    <ImageButton
        android:id="@+id/askabNine"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askabSeven"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/balignon"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
