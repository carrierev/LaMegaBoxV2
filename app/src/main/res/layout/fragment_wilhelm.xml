<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="data.com.lamegaboxv2.boxes.WilhelmFragment"
    android:background="@color/blueGreyMaterial">

    <TextView
        android:id="@+id/titleWilhelm"
        android:text="@string/wilhelm"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/wilhelmOne"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleWilhelm"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_wilhelm"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
