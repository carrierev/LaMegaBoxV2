<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="data.com.lamegaboxv2.boxes.YugiFragment"
    android:background="@color/yellowMaterial">

    <TextView
        android:id="@+id/titleYugi"
        android:text="@string/yugi"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/yugiOne"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleYugi"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_yugi"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/yugiTwo"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/titleYugi"
        android:contentDescription="@string/soundButton"
        android:src="@drawable/ic_yugi"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
